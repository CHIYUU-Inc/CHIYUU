---
import MainLayout from '../../layouts/Main.astro';
---

<MainLayout title="電子公告 - 株式会社CHIYUU" description="">
	<main>
		<h1>電子公告 - 株式会社CHIYUU</h1>
		<h2>決算公告</h2>
		<p class="instructions"></p>
	</main>
</MainLayout>

<style>
	main {
		width: 800px;
		max-width: calc(100% - 2rem);
		padding: 1rem;
		margin: auto;
		font-size: 20px;
		line-height: 1.6;
		color: white;
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		z-index: -1;
		width: 220px;
		height: auto;
		transform: translateX(-50%);
	}

	h1 {
		margin-bottom: 1em;
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		background-position: 0%;
		background-clip: text;
		background-size: 400%;
		-webkit-text-fill-color: transparent;
	}

	.instructions {
		padding: 1.5rem;
		margin-bottom: 2rem;
		background: linear-gradient(rgb(var(--accent-dark) 66%), rgb(var(--accent-dark) 33%));
		border: 1px solid rgb(var(--accent-light) 25%);
		border-radius: 8px;
	}

	.instructions code {
		padding: 0.3em 0.4em;
		font-size: 0.8em;
		font-weight: bold;
		color: rgb(var(--accent-light));
		background: rgb(var(--accent-light) 12%);
		border-radius: 4px;
	}

	.instructions strong {
		color: rgb(var(--accent-light));
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
