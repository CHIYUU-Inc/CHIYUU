---
interface Props {
	title: string;
	description: string;
  btnLink: string;
  btnText: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
const { btnLink } = Astro.props;
const { btnText } = Astro.props;
---

<div class="swiper-slide">
  <h2 class="display-2 from-start mb-lg-4">{title}</h2>
  <div class="from-end">
    <p class="fs-xl text-light opacity-70 pb-2 mb-lg-5">{description}</p>
  </div>
  <div class="scale-up delay-1">
    <a href={btnLink} class="btn btn-primary shadow-primary btn-lg">{btnText}</a>
  </div>
</div>
