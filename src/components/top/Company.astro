---
import TableRow from './company/TableRow.astro'

const tableRows = [
  {
    th: '会社名',
    td: '株式会社CHIYUU',
  },
  {
    th: '設立年月日',
    td: '2024年3月1日',
  },
  {
    th: '所在地',
    td: '〒980-0014 ' +
        '<span class="d-block d-md-inline">宮城県仙台市青葉区 本町一丁目5番28号 </span>' +
        'カーニープレイス仙台駅前通603号室',
  },
  {
    th: '資本金',
    td: '5,000,000円',
  },
  {
    th: '代表者',
    td: '<span class="d-block d-sm-inline">代表取締役社長 </span>古川 智大',
  },
  {
    th: '取引銀行',
    td: '三菱UFJ銀行、住信SBIネット銀行',
  }
]
---

<section class="bg-secondary py-4" id="company">
  <div class="container py-2 py-md-4 py-lg-5">
    <div class="row gy-4 gx-md-4 gx-3 justify-content-center">
      <div class="card border-0 shadow-sm p-4 p-xxl-5 w-75 md-w-90">
        <div class="row justify-content-center text-center">
          <h2 class="h3 pt-1 pt-md-2 pt-xxl-0 pb-0 pb-md-3 pb-xl-4 mb-0">企業情報</h2>
        </div>
        <div class="row">
          <div class="table-responsive mb-0">
            <table class="table align-middle">
              <tbody>
                {
                  tableRows.map((tr) => (
                    <TableRow
                      th={tr.th}
                      td={tr.td}
                    />
                  ))
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
