---
interface Props { title: string; icon: string;}
const { title } = Astro.props;
const { icon } = Astro.props;
---

<div class="col py-4 my-2 my-sm-3">
  <div class="card h-100 border-0 shadow-sm text-decoration-none pt-5 px-sm-3 px-md-0 px-lg-3 pb-sm-3 pb-md-0 pb-lg-3 me-xl-2">
    <div class="card-body pt-3">
      <div class="d-inline-block bg-primary shadow-primary rounded-3 position-absolute top-0 translate-middle-y p-3">
        <img src={`/assets/img/top/icons/services/${icon}`} class="d-block m-1" width="40" alt="Icon">
      </div>
      <h2 class="h4 d-inline-flex align-items-center">
        { title }
      </h2>
      <p class="fs-sm text-body mb-0">
        <slot />
      </p>
    </div>
  </div>
</div>
